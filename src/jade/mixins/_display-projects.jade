mixin display-projects(data)
  - var title = data.title || '';
  - var viewMore = data.learn_more ? true : false;
  - var col = data.col;
  - var shadow_klass = col == 2 ? '' : 'has-shadow';
  .m-display-projects.l-mgn--t-20
    .l-columns.l-mgn--b-10
      .txt--h1.col.l-v--m.l-w--80p!= title
      .col.l-v--m.l-w--20p
        if viewMore
          a.m-display-projects--more(href="#") 查看更多>
    .l-columns
      each item, i in data.body
        - var col_klass = col == 2 ? 'l-w--50p' : 'l-w--100p l-mgn--b-20';
        - var space_klass = (i+1)%2 == 0 ? 'l-pad--l-10' : 'l-pad--r-10';
        - var _price = item.price + '/套';
        - var _days = '制作周期: ' + item.days + '天';
        - var _comments = item.comments + '人评价';
        - col_klass = col_klass + ' ' + space_klass;
        .col.m-display-projects--item(class=col_klass)
          img.l-w--100p(src=paths.img + item.image, class=shadow_klass)
          .m-display-projects--item--name!=item.title
          .m-display-projects--item--price!=_price
          .m-display-projects--item--days!=_days
          .l-columns
            .col.l-w--30p
              img.l-w--100p(src=paths.img + 'ic-stars-4.png')
            .col.l-w--70p.l-pad--l-10.m-display-projects--item--comments!=_comments










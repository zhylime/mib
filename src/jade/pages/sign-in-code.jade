extends ../partials/_template


block content
  .c-content.c-sign-in--bg
    .c-sign-in
      h1 欢迎使用MIB
      h2 (Mega Icebreaker)
      .c-sign-in--main
        form.c-sign-in--form
          .c-sign-in--form--rol.border-bottom
            span CN+86
            input.input-phone(type="text", name="uid", autocomplete="on", placeholder="请输入手机号码")

          a.button.c-sign-in--form--submit.js-open-popup-code(href="javascript:void(0);") 获取验证码
          div.c-sign-in--form--link.txt--c
            a(href="sign-in.html") 已有密码，用密码登录


        .c-sign-in--other
          span 第三方账号快速登录
          .txt--c.l-mgn--t-20
            .ic--wechat.l-mgn--10
            .ic--qq.l-mgn--10
        .c-sign-in--register.l-mgn--10
          a(href="javascript:void(0);") 还没有账户？注册
  .c-popup--code.js-popup-code
    a(href="javascript:void(0);").js-close-popup-code.ic--close--black.l-f--r
    h2 请输入短信验证码
    span.warning.l-mgn--t-10 验证码错误
    .l-mgn--t-10.l-mgn--b-20
      input(type="text")
      input(type="text")
      input(type="text")
      input(type="text")
      input(type="text")
      input(type="text")
    a.btn-type-1(href="javascript:void(0);") 发送验证码
    a.login-btn.l-mgn--t-20(href="javascript:void(0);") 登陆
  .c-popup--cover.js-popup-cover


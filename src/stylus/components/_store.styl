.c-store
  margin-bottom 120px
  &--main
    &--info
      ul
        padding 0
        margin 0
        vertical-align top
        li
          width 48%
          margin 0 2% 5px 0
          display inline-block
          background $col-persian-green
          color $col-white
          text-align center
          vertical-align middle
          padding 5px 10px
          height 50px
          border-radius 5px
          box-sizing border-box
          position relative
          i
            margin-right 5px
            width 15px
            vertical-align middle
            height 100%
            float left
          span
            display block
            width 104px
            font-size 14px
      &--author
        text-align center
        padding-left 5px
        box-sizing border-box
        vertical-align top
        img
          width 65px
      &--contact
        background $col-bittersweet
        color $col-white
        border-radius 5px
        padding 5px 10px
        margin-top 3px
        i
          margin-right 5px
          vertical-align middle
  &--detail
    position relative
    &--translate
      color $col-persian-green
    &--body
      height 142px
      overflow hidden
  .btn-expand
    position absolute
    color $col-persian-green
    right 15px
    bottom 0
    &:before
    &:after
      content ""
      width 10px
      height 2px
      position absolute
      background $col-persian-green
      right -12px
      top 8px
      transition transform .5s
    &:before
      transform rotate(-60deg)
    &:after
      transform rotate(60deg)
      right -16px
    &[data-expanded="false"]
      &:before
        transform rotate(60deg)
      &:after
        transform rotate(-60deg)
  
  &--comments
    &--item
      position relative
      &--author
        img
          width 40px
          float left
          margin-right 10px
        .id
        .time
          display block
        .time
          font-size 12px
          color $col-silver-sand
      &--body
        height 40px
        overflow hidden
    &--read-all
      color $col-persian-green
      padding 5px 15px
      border 2px solid $col-persian-green
      border-radius 5px
      font-weight bold
    &--stars
      width 100px
    &--stars
    &--stars + span
      vertical-align middle
  
  &--links
    li
      list-style-type none
      position relative
      color $col-tundora
      font-size 23px
      border-bottom 1px solid $col-iron
      padding 20px 0
      &:after
        content ""
        background url(../img/ic-right-arrow.png)
        background-size 100%
        background-repeat no-repeat
        width 12px
        height 25px
        position absolute
        right 0
        
  &--footer
    padding 10px 20px
    box-sizing border-box
    font-size 18px
    &--stars
      width 76px
      & + span
        font-size 15px
    & > span
      color $col-persian-green
      font-size 14px
    .price
      font-size 20px
    &--btn
      position absolute
      width 150px
      height 50px
      line-height 50px
      color $col-white
      background $col-bittersweet
      border-radius 5px
      right 20px
      top 50%
      margin-top -25px
      text-align center
      
        
      
      
      
        
          
        

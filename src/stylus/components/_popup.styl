.c-popup
  &--cover
    display none
    position absolute
    width 100%
    height 100%
    background rgba(0, 0, 0, 0.6)
    z-index 10
    top 0
    left 0
  &--code
    display none
    position fixed
    z-index 99
    top 50%
    transform translateY(-50%)
    width 90%
    left 5%
    background $col-white
    text-align center
    padding 20px
    h2
      font-size 26px
      line-height 34px
    input
      display inline-block
      font-size 26px
      line-height 30px
      width 30px
      margin 0 5px
      border 1px solid $col-persian-green
      border-radius 5px
    .btn-type-1
      width 150px
      margin auto
      display block
    .login-btn
      background $col-iron
      color $col-white
      width 100%
      display block
      height 50px
      line-height 50px
      border-radius 5px